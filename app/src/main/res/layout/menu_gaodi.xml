<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#438FCB">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/picture11"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/burgers"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Burgers"
                android:layout_gravity="center"/>
        </LinearLayout>
        <Button
            android:id="@+id/p1"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="+"
            />
        <TextView
            android:id="@+id/amount1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/m1"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="-"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/picture21"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/chickens"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chickens"
                android:layout_gravity="center"/>
        </LinearLayout>
        <Button
            android:id="@+id/p2"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="+"/>
        <TextView
            android:id="@+id/amount2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/m2"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="-"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/picture31"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/frenchfries"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fries"
                android:layout_gravity="center"/>
        </LinearLayout>
        <Button
            android:id="@+id/p3"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="+"/>
        <TextView
            android:id="@+id/amount3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/m3"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="-"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/picture41"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/onionrings"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OnionRings"
                android:layout_gravity="center"/>
        </LinearLayout>
        <Button
            android:id="@+id/p4"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="+"/>
        <TextView
            android:id="@+id/amount4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/m4"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="-"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submitv t"
            android:textAllCaps="false"
            android:textColor="#F63A19"/>
        <Button
            android:id="@+id/history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History"
            android:textAllCaps="false"
            android:textColor="#F63A19"/>
    </LinearLayout>
</LinearLayout>